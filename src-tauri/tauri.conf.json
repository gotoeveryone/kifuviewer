{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Go Kifu Viewer",
  "version": "0.1.1",
  "identifier": "com.go-kifu.viewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Go Kifu Viewer",
        "width": 1280,
        "height": 920,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "nsis": {
        "languages": ["Japanese", "English"],
        "displayLanguageSelector": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["sgf"],
        "name": "Smart Game Format",
        "description": "Go game record file",
        "mimeType": "application/x-go-sgf"
      }
    ]
  }
}
